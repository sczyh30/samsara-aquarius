# Routes
# Higher priority routes first

# Home page
GET     /                           controllers.Application.index

# Login
GET     /login.now                  controllers.LoginController.index
POST    /login                      controllers.LoginController.login

# Reigster
GET     /register.now               controllers.RegisterController.index
POST    /register                   controllers.RegisterController.register

# Admin Route
GET     /adm1n6q9/add-info          controllers.AdminController.addInfoPage
POST    /adm1n6q9/add-info          controllers.AdminController.addInfoProcess

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
